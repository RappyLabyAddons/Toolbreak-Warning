Tool {
  width: 100%;
  height: 24;
  padding: 1;

  .tool-icon {
    left: 4;
    top: 2;
    width: 16;
    height: width;
    clickable: true;

    margin-top: 2;
  }

  .name-component {
    left: 22;
    top: 2;
  }

  .meta-component {
    left: 22;
    top: 13;
  }

  &:selected {
    padding: 0;
    border: 1 gray;
    background-color: black;
  }

  &.disabled {
    .avatar {
      opacity: 0.5;
    }

    .name {
      opacity: 0.5;
    }

    .custom-name {
      opacity: 0.5;
    }
  }
}